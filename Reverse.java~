string[] words =  "This is interview question".split(" ");

string rev = "";
for(int i = words.length - 1; i >= 0 ; i--)
{
   rev += words[i] + " ";
}


StringBuilder revb = new StringBuilder;
for(int i = words.length - 1; i >= 0 ; i--)
{
   revb.Append(words[i]);
   revb.Append(" ");
}
