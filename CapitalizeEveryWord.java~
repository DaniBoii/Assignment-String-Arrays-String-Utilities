class CapitalizeEveryWord 
{
  public static void main (String[] args)
  {
    String name, original;
    System.out.println("Please enter your name?");
    name = In.getString();
    
    String capitalize = null;
    for(int i=0; i< (name.length());i++){
      
      if(name.charAt(i)==' '){
        
        capitalize= capitalize.substring(0,i+1)+name.substring(i+1,i+2).toUpperCase()+name.substring(i+2);
        
      }else if(i==0){
        
        capitalize=name.substring(0,1).toUpperCase()+name.substring(1);
        
      }
    }
    System.out.println("name: "+capitalize);
  }
}

